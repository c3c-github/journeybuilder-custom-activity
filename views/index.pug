extends layout

block content
  article.slds-card
    .slds-card__header.slds-grid
      header.slds-media.slds-media_center.slds-has-flexi-truncate
        .slds-media__figure
          span.slds-icon_container.slds-icon-standard-contact(title="contact")
            svg.slds-icon.slds-icon_small(aria-hidden="true")
              use(xlink:href="/icons/standard-sprite/svg/symbols.svg#contact")
            span.slds-assistive-text contact
        .slds-media__body
          h2.slds-card__header-title
            a.slds-card__header-link.slds-truncate(href="javascript:void(0);" title="Card Header")
              span= title
    .slds-card__body.slds-card__body_inner
      form.js-settings-form
          label.slds-form-element__label.slds-p-top_medium(for='Nome')
            abbr.slds-required(title='required')
            | Nome da DE: *
          .slds-form-element__control
            input#Nome.slds-input.js-activity-setting(required='true', placeholder='', name='nome')
          label.slds-form-element__label.slds-p-top_medium(for='Celular')
            abbr.slds-required(title='required')
            | Campo da DE que contem o número do celular: *
          .slds-form-element__control
            input#Celular.slds-input.js-activity-setting(required='true', placeholder='', name='celular')
          label.slds-form-element__label.slds-p-top_medium(for='Namespace')
            abbr.slds-required(title='required')
            | Namespace do template Blip: *
          .slds-form-element__control
            input#Namespace.slds-input.js-activity-setting(required='true', placeholder='', name='namespace')
          label.slds-form-element__label.slds-p-top_medium(for='Template')
            abbr.slds-required(title='required')
            | Template da Blip: *
          .slds-form-element__control
            input#Template.slds-input.js-activity-setting(required='true', placeholder='', name='Template')
          label.slds-form-element__label.slds-p-top_medium(for='URLImagem')            
            | URL da imagem cadastrado na BLIP:
          .slds-form-element__control
            input#URLImagem.slds-input.js-activity-setting(required='false', placeholder='', name='URLImagem')
           label.slds-form-element__label.slds-p-top_medium(for='PrimeiroParam')            
            | Campo da DE que contem o valor do Parâmetro 1:
          .slds-form-element__control
            input#PrimeiroParam.slds-input.js-activity-setting(required='false', placeholder='', name='PrimeiroParam')
    footer.slds-card__footer
